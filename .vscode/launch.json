{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Unit Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--rootdir=${workspaceFolder}",
                "src/tests/unit"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "E2E Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--rootdir=${workspaceFolder}",
                "src/tests/e2e"
            ],
            "console": "integratedTerminal"
        }
    ]
}